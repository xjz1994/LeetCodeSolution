{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node.js",
            "program": "${file}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "none"
        },
        {
            "name": "(gdb) Bash on Windows Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileBasenameNoExtension}", //要调试的可执行文件名
            "args": [],
            "stopAtEntry": false,
            "cwd": "/mnt/c/Users/admin/Desktop", //可执行文件目录
            "environment": [],
            "externalConsole": true,
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "C:\\Windows\\System32\\bash.exe", //bash路径
                "pipeArgs": [
                    "-c"
                ],
                "pipeCwd": ""
            },
            "sourceFileMap": {
                "/mnt/c/Users/admin/OneDrive/study/LeetCodeSolution/Solution/Cpp": "${workspaceFolder}/Solution/Cpp/" //源码路径
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}